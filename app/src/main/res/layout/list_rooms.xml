<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5sp">

    <TextView
        android:id="@+id/listRoomNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room No."
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listRoomCapacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capacity: 4"
        app:layout_constraintTop_toBottomOf="@+id/listRoomNo"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/listRoomOccupants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="# of Occupants: 4"
        app:layout_constraintTop_toBottomOf="@+id/listRoomCapacity"
        tools:layout_editor_absoluteX="-35dp" />

    <TextView
        android:id="@+id/listRoomAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOT AVAILABLE"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>